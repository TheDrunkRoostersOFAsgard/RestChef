<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ordenar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.juand.clientapp.Ordenar"
    tools:showIn="@layout/activity_ordenar"
    android:background="@drawable/fondoapp1">

    <TextView
        android:text="Pulsa el boton para poder pedir tu orden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        tools:ignore="HardcodedText"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mic"
        android:id="@+id/btnGrabar"
        tools:ignore="ContentDescription"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textR1"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textColor="@android:color/background_dark"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtResult"
        android:layout_marginTop="56dp"
        android:id="@+id/textR2"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConfirmar"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textR2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/txtResult"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textR1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
