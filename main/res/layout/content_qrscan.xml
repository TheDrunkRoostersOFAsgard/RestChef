<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_qrscan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.juand.main.QREscaner"
    tools:showIn="@layout/activity_qrscan"
    android:background="@drawable/fondoapp1">

    <TextView
        android:text="Por favor escanee el cÃ³digo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="cursive"
        tools:ignore="HardcodedText"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center" />

    <TextView
        android:text="para poder reservar su mesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="36sp"
        android:fontFamily="cursive"
        tools:ignore="HardcodedText"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtResult"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textReservar"
        tools:ignore="HardcodedText"
        android:textSize="36sp"
        android:fontFamily="cursive"
        android:textColor="@android:color/background_dark"
        android:layout_above="@+id/btnReservar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="35dp" />

    <Button
        android:text="Reservar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReservar"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:visibility="invisible" />

    <Button
        android:text="Escanear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonScan"
        tools:ignore="HardcodedText,UnknownId"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
