<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_client"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.juand.main.MainClientActivity"
    tools:showIn="@layout/activity_main_client"
    android:background="@drawable/fondoapp1">

    <TextView
        android:text="Por favor conectese para iniciar el servicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:textSize="36sp"
        android:fontFamily="cursive"
        android:textColor="@android:color/background_dark"
        tools:ignore="HardcodedText,UnknownId"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtCliente"
        tools:ignore="Deprecated,HardcodedText"
        android:singleLine="true"
        android:hint="                        Ingrese su nombre" />

    <Button
        android:text="Conectar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonConectar"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/txtCliente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:text="*Cliente*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/textView9"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:fontFamily="cursive"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RestChef"
        android:textSize="56sp"
        android:fontFamily="cursive"
        tools:ignore="HardcodedText"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
